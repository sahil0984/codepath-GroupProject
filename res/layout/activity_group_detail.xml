<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"    
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/tvOnwardLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvReturnLocation"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/map"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:text="Home" />

    <RelativeLayout
        android:id="@+id/flUserList"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvOnwardLocation" >

    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/flUserList"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/tvReturnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/flUserList"
        android:layout_alignLeft="@+id/map"
        android:layout_alignRight="@+id/map"
        android:layout_marginBottom="18dp"
        android:text="Work" />

    <FrameLayout
       android:id="@+id/flCreateGroup"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"/>
    
</RelativeLayout>
