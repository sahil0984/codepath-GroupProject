<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
     >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	android:layout_marginTop="8dp" 
	android:background="@color/white" >	
    
    <com.parse.ParseImageView
        android:id="@+id/ivGroupImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivGroupImage"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:text="Group Name" />

    <LinearLayout 
        android:id="@+id/llDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivGroupImage"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp"
        android:weightSum="0.99"
        android:layout_below="@+id/tvName">
    

	    <TextView
	        android:id="@+id/tvOnwardTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.33"	
	        android:gravity="left"	                
	        android:text="9:00am" />
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="0.33">
	        
	  	    <TextView 
		        android:id="@+id/tvMon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="M"/>
		    <TextView 
		        android:id="@+id/tvTue"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="T"/>
		    <TextView 
		        android:id="@+id/tvWed"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="W"/>
		    <TextView 
		        android:id="@+id/tvThu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="T"/>
		    <TextView 
		        android:id="@+id/tvFri"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="F"/>
		    <TextView 
		        android:id="@+id/tvSat"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="S"/>
		    <TextView 
		        android:id="@+id/tvSun"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/choice_shape"
		        android:text="S"/>
	    </LinearLayout>
	    	    	    	    
	    <TextView
	        android:id="@+id/tvReturnTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.33"
	        android:gravity="right"
	        android:text="6:00pm" />
    
    </LinearLayout>

    
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llDateTime"
        android:layout_toRightOf="@+id/ivGroupImage"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"      
        android:text="Jack, Tom, Joe, Jill..." />

    </RelativeLayout>
</RelativeLayout>
